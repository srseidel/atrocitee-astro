/* Atrocitee Design System
 * This file contains the core design tokens and components that define the Atrocitee brand.
 * Inspired by Hugo's clean documentation style
 */

:root {
  /* Color System - Hugo-inspired colors */
  --color-primary: #0594CB; /* Hugo blue */
  --color-primary-light: #55acee;
  --color-primary-dark: #0077b5;
  
  --color-secondary: #FF4088; /* Hugo pink */
  --color-secondary-light: #ff6ba8;
  --color-secondary-dark: #cc3366;
  
  --color-accent: #00ADD8; /* Go cyan */
  
  /* Original Atrocitee colors */
  --color-teal: #4DB6AC; /* Original brand teal */
  --color-orange: #FF9800; /* Original brand orange */
  
  /* Neutral colors */
  --color-neutral-50: #fafafa;
  --color-neutral-100: #f5f5f5;
  --color-neutral-200: #e5e5e5;
  --color-neutral-300: #d4d4d4;
  --color-neutral-400: #a3a3a3;
  --color-neutral-500: #737373;
  --color-neutral-600: #525252;
  --color-neutral-700: #404040;
  --color-neutral-800: #262626;
  --color-neutral-900: #171717;
  
  /* Functional colors */
  --color-success: #18B566;
  --color-warning: #FFB238;
  --color-error: #E02C2C;
  --color-info: #0594CB;
  
  /* Documentation colors */
  --color-docs-sidebar: #f5f7f9;
  --color-docs-border: #e6ecf1;
  --color-docs-highlight: #fff8e6;
  
  /* Typography */
  --font-family-base: 'Roboto', 'Inter', system-ui, -apple-system, sans-serif;
  --font-family-heading: 'Work Sans', var(--font-family-base);
  --font-family-mono: 'Fira Mono', 'SFMono-Regular', Consolas, monospace;
  
  /* Spacing System */
  --space-1: 0.25rem;  /* 4px */
  --space-2: 0.5rem;   /* 8px */
  --space-3: 0.75rem;  /* 12px */
  --space-4: 1rem;     /* 16px */
  --space-5: 1.25rem;  /* 20px */
  --space-6: 1.5rem;   /* 24px */
  --space-8: 2rem;     /* 32px */
  --space-10: 2.5rem;  /* 40px */
  --space-12: 3rem;    /* 48px */
  --space-16: 4rem;    /* 64px */
  --space-20: 5rem;    /* 80px */
  --space-24: 6rem;    /* 96px */
  
  /* Border Radius */
  --radius-sm: 0.125rem; /* 2px */
  --radius-md: 0.25rem;  /* 4px */
  --radius-lg: 0.375rem; /* 6px */
  --radius-xl: 0.5rem;   /* 8px */
  --radius-2xl: 0.75rem; /* 12px */
  --radius-full: 9999px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.07), 0 2px 4px -1px rgba(0, 0, 0, 0.04);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.07), 0 4px 6px -2px rgba(0, 0, 0, 0.04);
  
  /* Animation */
  --transition-fast: 150ms;
  --transition-normal: 250ms;
  --transition-slow: 350ms;
  --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
  --ease-out: cubic-bezier(0, 0, 0.2, 1);
  --ease-in: cubic-bezier(0.4, 0, 1, 1);
  
  /* Layout */
  --content-width: 1200px;
  --sidebar-width: 260px;
  --navbar-height: 4rem;
}

/* Apply design tokens to TailwindCSS utility classes */
.text-primary { color: var(--color-primary); }
.bg-primary { background-color: var(--color-primary); }
.border-primary { border-color: var(--color-primary); }

.text-secondary { color: var(--color-secondary); }
.bg-secondary { background-color: var(--color-secondary); }
.border-secondary { border-color: var(--color-secondary); }

.text-accent { color: var(--color-accent); }
.bg-accent { background-color: var(--color-accent); }
.border-accent { border-color: var(--color-accent); }

/* Original Atrocitee brand colors */
.text-teal { color: var(--color-teal); }
.bg-teal { background-color: var(--color-teal); }
.border-teal { border-color: var(--color-teal); }

.text-orange { color: var(--color-orange); }
.bg-orange { background-color: var(--color-orange); }
.border-orange { border-color: var(--color-orange); }

/* Primary Button - Hugo style */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  line-height: 1.5;
  transition: all var(--transition-normal) var(--ease-in-out);
  border-radius: var(--radius-md);
  padding: 0.5rem 1.25rem;
  font-size: 0.875rem;
}

.btn-primary {
  background-color: var(--color-primary);
  color: white;
  border: 1px solid var(--color-primary);
}

.btn-primary:hover {
  background-color: var(--color-primary-dark);
  border-color: var(--color-primary-dark);
  box-shadow: var(--shadow-md);
}

.btn-secondary {
  background-color: white;
  color: var(--color-primary);
  border: 1px solid var(--color-docs-border);
}

.btn-secondary:hover {
  border-color: var(--color-primary);
  color: var(--color-primary-dark);
  background-color: var(--color-neutral-50);
}

/* Original brand styled buttons */
.btn-teal {
  background-color: var(--color-teal);
  color: white;
  border: 1px solid var(--color-teal);
}

.btn-teal:hover {
  background-color: rgba(77, 182, 172, 0.9);
  border-color: var(--color-teal);
  box-shadow: var(--shadow-md);
}

.btn-orange {
  background-color: var(--color-orange);
  color: white;
  border: 1px solid var(--color-orange);
}

.btn-orange:hover {
  background-color: rgba(255, 152, 0, 0.9);
  border-color: var(--color-orange);
  box-shadow: var(--shadow-md);
}

.btn-lg {
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
}

/* Card styles */
.card {
  background-color: white;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  border: 1px solid var(--color-docs-border);
  transition: box-shadow var(--transition-normal) var(--ease-in-out), 
              transform var(--transition-normal) var(--ease-in-out);
}

.card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
}

.card-header {
  padding: var(--space-4);
  border-bottom: 1px solid var(--color-docs-border);
  font-weight: 500;
  background-color: var(--color-neutral-50);
}

.card-body {
  padding: var(--space-4);
}

.card-footer {
  padding: var(--space-4);
  border-top: 1px solid var(--color-docs-border);
  background-color: var(--color-neutral-50);
}

/* Note/Alert components - Documentation style */
.alert {
  padding: var(--space-4);
  border-radius: var(--radius-md);
  margin-bottom: var(--space-4);
  border-left: 4px solid transparent;
  background-color: var(--color-neutral-50);
}

.alert-info {
  border-left-color: var(--color-info);
  background-color: rgba(5, 148, 203, 0.08);
}

.alert-success {
  border-left-color: var(--color-success);
  background-color: rgba(24, 181, 102, 0.08);
}

.alert-warning {
  border-left-color: var(--color-warning);
  background-color: rgba(255, 178, 56, 0.08);
}

.alert-error {
  border-left-color: var(--color-error);
  background-color: rgba(224, 44, 44, 0.08);
}

/* Code blocks */
.code-block {
  background-color: var(--color-neutral-800);
  border-radius: var(--radius-md);
  padding: var(--space-4);
  color: var(--color-neutral-100);
  font-family: var(--font-family-mono);
  font-size: 0.9rem;
  overflow-x: auto;
}

/* Documentation specific components */
.docs-sidebar {
  background-color: var(--color-docs-sidebar);
  border-right: 1px solid var(--color-docs-border);
  width: var(--sidebar-width);
  height: calc(100vh - var(--navbar-height));
  position: sticky;
  top: var(--navbar-height);
  overflow-y: auto;
  padding: var(--space-4);
}

.docs-content {
  max-width: calc(var(--content-width) - var(--sidebar-width));
  padding: var(--space-6);
}

.docs-nav-link {
  display: block;
  padding: var(--space-2) 0;
  color: var(--color-neutral-700);
  font-size: 0.9rem;
  transition: color var(--transition-fast) var(--ease-in-out);
}

.docs-nav-link:hover,
.docs-nav-link.active {
  color: var(--color-primary);
}

@layer components {
  /* Button components */
  .btn {
    @apply inline-flex items-center justify-center font-medium leading-normal transition-all duration-300 ease-in-out rounded-md px-5 py-2 text-sm;
  }

  .btn-primary {
    @apply bg-primary text-white border border-primary hover:bg-primary-dark hover:border-primary-dark hover:shadow-md;
  }

  .btn-secondary {
    @apply bg-white text-primary border border-docs-border hover:border-primary hover:text-primary-dark hover:bg-neutral-50;
  }

  /* Original brand styled buttons */
  .btn-teal {
    @apply bg-teal text-white border border-teal hover:bg-teal/90 hover:shadow-md;
  }

  .btn-orange {
    @apply bg-orange text-white border border-orange hover:bg-orange/90 hover:shadow-md;
  }

  .btn-lg {
    @apply px-6 py-3 text-base;
  }

  /* Card styles */
  .card {
    @apply bg-white rounded-lg shadow-sm overflow-hidden border border-docs-border transition-all duration-300 ease-in-out hover:shadow-md hover:-translate-y-0.5;
  }

  .card-header {
    @apply p-4 border-b border-docs-border font-medium bg-neutral-50;
  }

  .card-body {
    @apply p-4;
  }

  .card-footer {
    @apply p-4 border-t border-docs-border bg-neutral-50;
  }

  /* Note/Alert components - Documentation style */
  .alert {
    @apply p-4 rounded-md mb-4 border-l-4 border-transparent bg-neutral-50;
  }

  .alert-info {
    @apply border-l-info bg-info/[0.08];
  }

  .alert-success {
    @apply border-l-success bg-success/[0.08];
  }

  .alert-warning {
    @apply border-l-warning bg-warning/[0.08];
  }

  .alert-error {
    @apply border-l-error bg-error/[0.08];
  }

  /* Code blocks */
  .code-block {
    @apply bg-neutral-800 rounded-md p-4 text-neutral-100 font-mono text-[0.9rem] overflow-x-auto;
  }

  /* Documentation specific components */
  .docs-sidebar {
    @apply bg-docs-sidebar border-r border-docs-border w-[260px] h-[calc(100vh-4rem)] sticky top-16 overflow-y-auto p-4;
  }

  .docs-content {
    @apply max-w-[calc(1200px-260px)] p-6;
  }

  .docs-nav-link {
    @apply block py-2 text-neutral-700 text-[0.9rem] transition-colors duration-150 ease-in-out hover:text-primary;
  }

  .docs-nav-link.active {
    @apply text-primary;
  }

  /* Logo component styles */
  .logo-container {
    @apply inline-flex items-center;
  }
  
  .logo-image {
    @apply h-[60px] w-auto max-w-[200px] object-contain;
  }
} 