---
/**
 * Account Settings Page
 * 
 * Comprehensive user account management including profile, address, and preferences
 */

// Mark as server-rendered (required for authentication)
export const prerender = false;

import Container from "@components/common/Container.astro";
import MainLayout from "@layouts/MainLayout.astro";
import AccountSettingsForm from "@components/features/account/AccountSettingsForm";

const title = "Account Settings - Atrocitee";
const description = "Manage your account profile, address, and preferences";
---

<MainLayout title={title} description={description}>
  <Container>
    <div class="py-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Account Settings</h1>
        <p class="text-gray-600">
          Manage your profile information, shipping address, and account preferences.
        </p>
      </div>
      
      <!-- React Account Settings Form -->
      <AccountSettingsForm client:load />
    </div>
  </Container>
</MainLayout> 