---
import MainLayout from '../layouts/MainLayout.astro';

// Pre-render this page at build time
export const prerender = true;
---

<MainLayout title="Page Not Found" description="The page you are looking for doesn't exist">
  <section class="py-20">
    <div class="container px-4 mx-auto">
      <div class="max-w-lg mx-auto text-center">
        <h1 class="text-7xl font-bold mb-8">404</h1>
        <h2 class="text-3xl font-semibold mb-4">Page Not Found</h2>
        <p class="text-lg mb-8">
          Sorry, the page you are looking for doesn't exist or has been moved.
        </p>
        <div class="flex justify-center">
          <a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700">
            Return Home
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout> 