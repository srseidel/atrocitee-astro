---
// A basic test page without any server components or imports
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Basic Sentry Test</title>
  <style>
    body { font-family: system-ui, sans-serif; max-width: 800px; margin: 0 auto; padding: 20px; }
    button { background: #e63946; color: white; border: none; padding: 10px 15px; border-radius: 4px; cursor: pointer; margin-top: 20px; }
    .message { margin-top: 20px; padding: 15px; background: #f8d7da; color: #721c24; border-radius: 4px; display: none; }
  </style>
</head>
<body>
  <h1>Basic Sentry Error Test</h1>
  <p>This page contains no server components or authentication requirements.</p>
  
  <button id="error-btn">Throw JavaScript Error</button>
  <div id="message" class="message">Error thrown! Check your Sentry dashboard.</div>
  
  <script>
    // Basic script with no imports
    document.addEventListener('DOMContentLoaded', function() {
      const errorBtn = document.getElementById('error-btn');
      const messageDiv = document.getElementById('message');
      
      if (errorBtn && messageDiv) {
        errorBtn.addEventListener('click', function() {
          try {
            // Show the message
            messageDiv.style.display = 'block';
            
            // Throw a basic error that Sentry should capture automatically
            console.error("About to throw test error");
            throw new Error("Manual test error from basic page");
          } catch (e) {
            console.error("Error caught:", e);
            // The global error handler from Sentry should catch this automatically
            // without us needing to do anything special
          }
        });
      }
    });
  </script>
</body>
</html> 