---
/**
 * Test Checkout Page
 * 
 * Simplified checkout page for testing Stripe integration without cart dependencies
 */

import MainLayout from '@layouts/MainLayout.astro';

export const prerender = false;

const title = 'Test Checkout - Atrocitee';
const description = 'Test Stripe payment integration';
---

<MainLayout title={title} description={description}>
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Test Checkout</h1>
        <p class="mt-2 text-gray-600">Direct Stripe payment testing</p>
      </div>

      <!-- Test Items Display -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Test Items</h2>
        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <div>
              <h3 class="font-medium">Test Product - Black T-Shirt</h3>
              <p class="text-sm text-gray-600">Size: M, Color: Black</p>
            </div>
            <div class="text-right">
              <p class="font-medium">$19.99</p>
              <p class="text-sm text-gray-600">Qty: 1</p>
            </div>
          </div>
          <div class="flex justify-between items-center">
            <div>
              <h3 class="font-medium">Test Product - White Mug</h3>
              <p class="text-sm text-gray-600">Size: 11oz, Color: White</p>
            </div>
            <div class="text-right">
              <p class="font-medium">$15.99</p>
              <p class="text-sm text-gray-600">Qty: 1</p>
            </div>
          </div>
          <hr>
          <div class="flex justify-between items-center font-semibold">
            <span>Subtotal:</span>
            <span>$35.98</span>
          </div>
          <div class="flex justify-between items-center">
            <span>Tax (8%):</span>
            <span>$2.88</span>
          </div>
          <div class="flex justify-between items-center">
            <span>Shipping:</span>
            <span>$5.99</span>
          </div>
          <hr>
          <div class="flex justify-between items-center font-bold text-lg">
            <span>Total:</span>
            <span>$44.85</span>
          </div>
        </div>
      </div>

      <!-- Stripe Payment Form -->
      <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Payment Information</h2>
        <div id="test-checkout-form">
          <!-- We'll add Stripe Elements here via JavaScript -->
        </div>
      </div>

      <!-- Instructions -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-6">
        <h3 class="font-medium text-blue-900 mb-2">Test Card Numbers</h3>
        <div class="text-sm text-blue-700 space-y-1">
          <p><strong>Success:</strong> 4242424242424242</p>
          <p><strong>Declined:</strong> 4000000000000002</p>
          <p><strong>Expired:</strong> 4000000000000069</p>
          <p><strong>Incorrect CVC:</strong> 4000000000000127</p>
          <p class="text-xs mt-2">Use any future date for expiration and any 3 digits for CVC</p>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Simple test checkout implementation
    console.log('Test checkout page loaded - Stripe integration would go here');
    
    // Add a simple button for now
    const formContainer = document.getElementById('test-checkout-form');
    if (formContainer) {
      formContainer.innerHTML = `
        <div class="space-y-4">
          <div class="p-4 bg-gray-100 rounded-lg text-center">
            <p class="text-gray-600 mb-2">Stripe Elements would load here</p>
            <button 
              onclick="testPaymentFlow()"
              class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
            >
              Test Payment Intent Creation
            </button>
          </div>
        </div>
      `;
    }

    window.testPaymentFlow = async () => {
      try {
        const response = await fetch('/api/v1/checkout/create-payment-intent', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            items: [
              { id: 'test-item-1', name: 'Test Product - Black T-Shirt', price: 19.99, quantity: 1 },
              { id: 'test-item-2', name: 'Test Product - White Mug', price: 15.99, quantity: 1 }
            ],
            shipping: {
              line1: '123 Test Street',
              city: 'Test City',
              state: 'NY',
              postal_code: '12345',
              country: 'US',
            },
            customerEmail: 'test@example.com',
          }),
        });

        const data = await response.json();
        
        if (response.ok) {
          alert(`Payment Intent Created Successfully!\\nAmount: $${data.amount}\\nPayment Intent ID: ${data.paymentIntentId}`);
          console.log('Payment Intent Data:', data);
        } else {
          alert(`Payment Intent Failed: ${data.error}`);
          console.error('Payment Intent Error:', data);
        }
      } catch (error) {
        alert(`Error: ${error.message}`);
        console.error('Payment test error:', error);
      }
    };
  </script>
</MainLayout>